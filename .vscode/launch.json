  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "test"
      },
      "args": [
        "-b",
        "--require",
        "@babel/register",
        "--timeout",
        "999999",
        "--colors",
        "src/**/*.spec.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "test"
      },
      "args": [
        "-b",
        "--require",
        "@babel/register",
        "--timeout",
        "999999",
        "--colors",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
